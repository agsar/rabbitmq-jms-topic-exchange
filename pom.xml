<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>rjms-topic-selector</artifactId>

  <name>rjms-topic</name>
  <description>RabbitMQ JMS Topic Selector Plug-in</description>

  <packaging>pom</packaging>

  <parent>
    <groupId>com.rabbitmq.jms</groupId>
    <artifactId>rabbitmq-jms-parent</artifactId>
    <version>1.2.4-SNAPSHOT</version>
  </parent>

  <properties>
    <maven.artefact>${project.artifactId}-${project.version}.ez</maven.artefact>
  </properties>

  <build>

    <plugins>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <executable>make</executable>
        </configuration>
        <executions>
          <execution>
            <id>clean-jms-topic-plugin</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <commandlineArgs>clean</commandlineArgs>
            </configuration>
          </execution>
          <execution>
            <id>compile-jms-topic-plugin</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <commandlineArgs>MAVEN_ARTEFACT=${maven.artefact} RMQ_VERSION=${rabbitmq.version} RJMS_VERSION=${project.version} dist</commandlineArgs>
            </configuration>
          </execution>
          <execution>
            <id>test-jms-topic-plugin</id>
            <phase>test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <commandlineArgs>MAVEN_ARTEFACT=${maven.artefact} RMQ_VERSION=${rabbitmq.version} RJMS_VERSION=${project.version} test</commandlineArgs>
            </configuration>
          </execution>
          <execution>
            <id>package-jms-topic-plugin</id>
            <phase>package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <commandlineArgs>MAVEN_ARTEFACT=${maven.artefact} RMQ_VERSION=${rabbitmq.version} RJMS_VERSION=${project.version} package</commandlineArgs>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-rabbitmq-plugin</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/plugins/${maven.artefact}</file>
                  <type>ez</type>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>

  <repositories>
    <repository>
      <id>jboss.org</id>
      <name>Jboss Maven 2 Repository</name>
      <url>http://repository.jboss.org/nexus/content/groups/public-jboss/</url>
    </repository>
    <repository>
      <id>vmware-release</id>
      <name>VMware Release repository</name>
      <url>http://private.maven.vmware.com.s3.amazonaws.com/release</url>
    </repository>
    <repository>
      <id>vmware-snapshot</id>
      <name>VMware Snapshot repository</name>
      <url>http://private.maven.vmware.com.s3.amazonaws.com/snapshot</url>
    </repository>
  </repositories>

</project>
